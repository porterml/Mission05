@{
    ViewData["Title"] = "All Movies";
}

@model List<NewMovieForm>;

<table class="table table-bordered">

    <thead class="font-weight-bold">
        <tr>
            <td>Title</td>
            <td>Category</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>Lent To</td>
            <td>Notes</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var x in Model)   // use this to iterate through each of the instances in teh model(aka database)
        {
        <tr>
            <td>@x.Title</td>
            <td>@x.Category.CategoryName</td>
            <td>@x.Year</td>
            <td>@x.Director</td>
            <td>@x.Rating</td>
            <td>@x.Edited</td>
            <td>@x.LentTo</td>
            <td>@x.Notes</td>

            <td><a asp-controller="Home" asp-action="Edit" asp-route-MovieId="@x.MovieId">Edit</a></td>
            <td><a asp-controller="Home" asp-action="Delete" asp-route-MovieId="@x.MovieId">Delete</a></td>
        </tr>

        }
    </tbody>

</table>
